{
  "compilerOptions": {
    "strict": true,
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "Controllers/*": [
        "src/controllers/*"
      ],
      "Services/*": [
        "src/services/*"
      ],
      "Clients/*": [
        "src/clients/*"
      ]
    }
  },
  "include": [
    "src", "__tests__"
  ]
}